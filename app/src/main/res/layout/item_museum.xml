<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:paddingRight="4dp"
    android:paddingLeft="4dp"
    android:background="@drawable/bg_radiant_grey"
    android:layout_marginBottom="6dp">

    <TextView
        android:id="@+id/tvNamaMuseum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Nama Museum"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:layout_above="@+id/tvTahunBerdiri"/>

    <TextView
        android:id="@+id/tvTahunBerdiri"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="10dp"
        android:text="1920"
        android:layout_above="@+id/tvAlamatMuseum"/>

    <TextView
        android:id="@+id/tvAlamatMuseum"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="40dp"
        android:text="Alamat Museum"
        android:paddingBottom="4dp"
        android:layout_alignParentBottom="true"/>

